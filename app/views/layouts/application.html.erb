	      <div class="navbar-inner">
	        <div class="container">
	          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          <a class="brand" href="/#index">DSS Messenger</a>
	          <div class="nav-collapse collapse">
	            <ul class="nav">
	            </ul>
				<ul class="nav pull-right">
				  <li><a href="#/prefs" class="icon-wrench nav-icon" title="Settings"></a></li>
				</ul>
	          </div><!--/.nav-collapse -->
	        </div>
	      </div>
	</div>
	<div class="container">
		<div class="row">
		<%= yield %>
		</div>
	</div>

</body>
</html>
